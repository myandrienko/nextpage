{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "rewriteRelativeImportExtensions": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2022"]
  },
  "include": ["src"]
}
